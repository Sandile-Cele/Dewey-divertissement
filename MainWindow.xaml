        <TextBlock HorizontalAlignment="Left" Margin="140,294,0,0" Text="Profile" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22"/>
        <Button Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="286,294,0,0" VerticalAlignment="Top" Height="38" FontSize="22" Width="86" Background="#FFFFD100" Click="btnLogin_Click"/>
        <Image Height="132" Margin="200,98,794,0" VerticalAlignment="Top" Source="/images/user.png"/>
